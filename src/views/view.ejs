<%include layout/_header%>
<div class="container">
    <div class="row">
        <div class="col s10 offset-s1">
            <div class="card">
                <div class="card-content">
                    <div class="card-image">
                        <img src="/uploads/<%=data.imageURL%>">
                    </div>
                    <div class="card-title">
                        <%=data.nombre%>
                    </div>
                    <p>
                        S/. <%=data.precio%>
                    </p>
                    <form action="/agregarCarrito" method="POST">
                        <input type="hidden" name="idPrenda" value="<%=data.id%>">
                        <input type="hidden" name="precio" value="<%=data.precio%>">
                        <input type="number" name="cantidad" required value="1" min="1">
                        <button type="submit" class="btn">Agregar al carrito</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%include layout/_footer%>
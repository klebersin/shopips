<%include ../layout/_header%>
<div class="container">
    <div class="row">
        <%for(var i=0;i<data.length;i++){%>
            <div class="col s4">
                <div class="card">
                    <div class="card-content">
                        <div class="card-title">
                            <%=data[i].nombre%>
                        </div>
                        <div >
                            Color: <%=data[i].color%>
                        </div>
                        <div >
                            Para: <%=data[i].genero%>
                        </div>
                        <div>
                            Precio: S/.<%=data[i].precio%>
                        </div>
                        <div>
                            En oferta:<%=data[i].oferta%>
                        </div>
                        <div>
                            Estado de prenda : <%=data[i].estadoRegistro%>
                        </div>
                    </div>
                    <div class="card-action">
                        <%if(data[i].estadoRegistro=='A'){%>
                            <%if(data[i].oferta==0){%>
                                <a href="/prendas/ofertar/<%=data[i].id%>">Ofertar</a>
                            <%}else{%>
                                <a href="/prendas/desofertar/<%=data[i].id%>">Desofertar</a>
                                <%}%>
                        <a href="/prendas/delete/<%=data[i].id%>">Eliminar</a>
                        <%}else{%>
                        <a href="/prendas/activar/<%=data[i].id%>">Activar</a>
                        <%}%>
                    </div>
                    
                </div>
            </div>
        <%}%>
    </div>
</div>
<%include ../layout/_footer%>